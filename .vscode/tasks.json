{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Sass Compile",
			"type": "shell",
			"command": "sass",
			"args": [
				"./src/scss/style.scss",
				"./dist/css/style.css"
			],
			"group": "build",
			"problemMatcher": [
				"$node-sass"
			],
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"label": "Push Codes to Smithin Branch",
			"type": "shell",
			"command": "git",
			"args": [
				"git pull --all",
				"git checkout smithin",
				"git push",
				"git checkout master"
			],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		}
	]
}